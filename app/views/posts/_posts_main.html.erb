<% provide(:title, "Posts") %>

<p id="notice"><%= notice %></p>

<% posts.each do |post| %>
	<div class="center jumbotron">
		<h2><%= post.heading %></h2>
		<h3><%= post.sub_heading %></h3>
		<h5><%= simple_format(post.body, :sanitize => false) %></h5>
		<%= link_to "Click here to read more and comment", "posts/#{post.id}/", class: "btn btn-lg btn-primary" %>
	</div>
<% end %>
