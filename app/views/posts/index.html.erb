<% provide(:title, "Posts") %>

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Heading</th>
      <th>Sub heading</th>
      <th>Body</th>
      <th>Created</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr class="conver">
        <td><%= post.heading %></td>
        <td><%= post.sub_heading %></td>
        <td><%= truncate(post.body, :length => 200) %></td>
        <td><%= post.created_at.strftime("%d %B %Y") %></td>
        <td id="center_images_count"><%= post.images.count %></td>
        <td><%= link_to 'Read', post %></td>
        <% if logged_in? %>
          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="center jumbotron">
    <%= link_to "Click here to subscribe to my blog posts", new_subscriber_path, class: "btn btn-lg btn-primary" %>
</div>
