<% provide(:title, "Subscribe") %>

<h1>Subscribe now</h1>
<h3>Give me your detail and you will be emailed as soon as there is a new post</h3>

<%= form_for(@subscriber) do |f| %>
  <% if @subscriber.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4><%= pluralize(@subscriber.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @subscriber.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:subscriber, url: new_subscriber_path) do |f| %>

        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control' %><br>

        <%= f.submit "Subscribe", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>