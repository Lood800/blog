<% provide(:title, "Subscribers") %>

<p id="notice"><%= notice %></p>

<h1>Subscribers</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr class="conver">
        <td><%= subsciber.name %></td>
        <td><%= subscriber.email %></td>
        <td><%= truncate(post.body, :length => 200) %></td>
        <td><%= post.created_at.strftime("%d %B %Y") %></td>
        <td><%= post.images.count %></td>
        <td><%= link_to 'Destroy', subscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>